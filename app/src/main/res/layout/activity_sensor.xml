<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/roll"
        android:text="@string/roll" />

    <TextView
        android:id="@+id/pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/speed_value"
        android:layout_below="@+id/roll"
        android:text="@string/pitch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pitch"
        android:id="@+id/yaw"
        android:text="@string/yaw"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/bluetooth_btn"
        android:text="@string/start_stream"/>

    <SeekBar
        android:id="@+id/speed"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/yaw"
        android:layout_marginTop="50dp"
        android:max="100"
        android:progress="50"/>

    <TextView
        android:id="@+id/speed_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed_val"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/speed"
        android:layout_marginTop="20dp"/>

    <CheckBox
        android:id="@+id/start_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/start_stop"
        android:layout_below="@id/bluetooth_btn"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
